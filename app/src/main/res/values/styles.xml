<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSurface</item>
    </style>
    <style name="CustomButton">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:width">100dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/chivo</item>
    </style>
    <style name="MainText">
        <item name="android:textColor">@color/textColorSurface</item>
        <item name="android:fontFamily">@font/chivo</item>
        <item  name="android:textSize">30sp</item>
    </style>
    <style name="ScoreText">
        <item name="android:textColor">@color/textColorSurface</item>
        <item name="android:fontFamily">@font/abel</item>
        <item  name="android:textSize">25sp</item>
    </style>
    <style name="EditText">
        <item name="android:textColor">@color/textColorSurface</item>
        <item name="android:fontFamily">@font/abel</item>
        <item  name="android:textSize">25sp</item>
    </style>
</resources>